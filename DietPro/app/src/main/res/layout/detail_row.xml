<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_signin_btn_light_text_disabled"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/detailRowivRowImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/side_nav_bar" />

    <LinearLayout
        android:id="@+id/detailRowllLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <android.widget.TextView
            android:id="@+id/detailRowtvRowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size18"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="Sample Title" />

        <android.widget.TextView
            android:id="@+id/detailRowtvRowQuantityPerGram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Quantity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <android.widget.Spinner
            android:id="@+id/detailRowspSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

            <android.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="gm"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailRowllPriceLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <android.widget.TextView
            android:id="@+id/detailRowtvRowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Sample Price" />

        <ImageView
            android:id="@+id/detailRowivRowCartImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_add_shopping_cart_white_24dp" />

    </LinearLayout>

</LinearLayout >
</android.support.v7.widget.CardView>