<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99999e"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.widget.TextView
                android:id="@+id/myOrderRowtvOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="22/11/2015"
                android:textColor="#000000"
                android:textSize="20dp" />

            <android.widget.TextView
                android:id="@+id/myOrderRowtvOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="500"
                android:textSize="20dp" />
        </LinearLayout>

        <android.widget.TextView
            android:id="@+id/myOrderRowtvOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Dried Fruit,cereals,Crackers..." />

        <android.widget.Button
            android:id="@+id/myOrderRowbtnOrderDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/image_round_corner"
            android:padding="10dp"
            android:text="View Details"
            android:textColor="@color/white" />

    </LinearLayout>
</android.support.v7.widget.CardView>