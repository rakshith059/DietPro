<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <quikr.com.dietpro.Activity.Utils.RoundedImageView
                android:id="@+id/fragmentPersonalTrainerivPic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/diet_pro_image2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">

                <android.widget.TextView
                    android:id="@+id/fragmentPersonalTrainertvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:textSize="@dimen/size18"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.ImageView
                        android:id="@+id/fragmentPersonalTrainerivLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:src="@android:drawable/ic_dialog_map"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <android.widget.TextView
                        android:id="@+id/fragmentPersonalTrainertvLocation"
                        android:layout_width="match_parent"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="@dimen/size15"
                        android:textColor="@color/common_signin_btn_light_text_focused"
                        android:layout_height="wrap_content"/>

                    <android.widget.TextView
                        android:id="@+id/fragmentPersonalTrainertvDetail"
                        android:layout_width="match_parent"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:minLines="4"
                        android:textSize="@dimen/size14"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_signin_btn_dark_text_disabled"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="right|center">

            <android.widget.ImageView
                android:id="@+id/fragmentPersonalTrainerivLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_myplaces"/>

        <android.widget.TextView
            android:id="@+id/fragmentPersonalTrainertvLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size15"
            android:textStyle="bold"
            android:text="@string/personal_trainer_likes"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>